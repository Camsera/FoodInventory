<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <android.support.constraint.ConstraintLayout
        android:id="@+id/shelfLayout"
        android:layout_width="325dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/shelf_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/brandInShelf"
            android:layout_width="181dp"
            android:layout_height="35dp"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:padding="8dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/labelInShelf" />

        <TextView
            android:id="@+id/labelInShelf"
            android:layout_width="325dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:padding="8dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/expirationDateInShelf"
            android:layout_width="115dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:padding="8dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/brandInShelf"
            app:layout_constraintTop_toBottomOf="@+id/labelInShelf" />
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>